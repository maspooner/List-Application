<Window x:Class="ListApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListApp"
        mc:Ignorable="d"
        Title="ListApp" Height="480" Width="720" MinHeight="240" MinWidth="360">
    <Grid Name="mainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="100"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*" MinWidth="200"/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Column="0">
            <DockPanel DockPanel.Dock="Top">
                <Label DockPanel.Dock="Left">Lists</Label>
                <Image Name="generalOptionsImage" Height="20" DockPanel.Dock="Right" MouseUp="GeneralOptionImage_MouseUp"/>
            </DockPanel>
            <Label Name="messageLabel" DockPanel.Dock="Bottom"/>
            <ScrollViewer DockPanel.Dock="Bottom" VerticalScrollBarVisibility="Auto">
                <StackPanel Name="leftPanel"/>
            </ScrollViewer>
        </DockPanel>
        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" MouseDoubleClick="CollapseLeft_MouseDoubleClick" />
        <Grid Grid.Column="2" Name="rightGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" MinHeight="100"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="*" MinHeight="100"/>
            </Grid.RowDefinitions>
            <DockPanel Grid.Row="0">
                <DockPanel DockPanel.Dock="Top" Name="listTitlePanel">
                    <Label Name="listTitleLabel" DockPanel.Dock="Left" Background="LightGray"/>
                    <Image Name="listActionImage" Height="20" MouseUp="ListActionImage_MouseUp"/>
                    <Image Name="listOptionImage" Height="20" MouseUp="ListOptionImage_MouseUp"/>
                </DockPanel>
                <ScrollViewer DockPanel.Dock="Bottom" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <Grid Name="listItemGrid"/>
                </ScrollViewer>
            </DockPanel>
            <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" MouseDoubleClick="CollapseBottom_MouseDoubleClick" />
            <ScrollViewer Grid.Row="2">
                <Grid Name="contentPanel" Background="Aqua"/>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
