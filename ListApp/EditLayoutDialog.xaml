<Window x:Class="ListApp.EditLayoutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListApp"
        mc:Ignorable="d"
        Title="EditLayoutDialog" Height="500" Width="500">
    <DockPanel>
		<DockPanel DockPanel.Dock="Bottom" LastChildFill="False">
			<Button Click="ConfirmButton_Click">OK</Button>
            <Button IsCancel="True" IsDefault="True">Cancel</Button>
        </DockPanel>
        <ScrollViewer DockPanel.Dock="Top" VerticalScrollBarVisibility="Auto">
			
            <Grid Name="layoutContent" SizeChanged="LayoutContent_SizeChanged" KeyDown="layoutContent_KeyDown"/>
        </ScrollViewer>
    </DockPanel>
</Window>
